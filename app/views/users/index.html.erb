<div>
  <%= flash[:notice] %>
</div>
<div class="container px-3">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <div class="col px-8">
          <%= link_to(edit_user_path(@user), class: "btn btn-outline-secondary") do %><i class="fas fa-user-cog"></i><% end %>
        </div>
      </div>
      <p class="mt-3"></p>
      <h1>New book</h1>
      <%= form_with model: @new_book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>説明</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book', class: "btn btn-success" %>  <!--緑-->
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table">
        <% @users.each do |user| %>
          <thead>
            <tr>
              <th></th>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to user_path(user.id) do %>Show<% end %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>




